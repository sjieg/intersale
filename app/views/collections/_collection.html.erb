<div class="card" id="<%= dom_id(collection) %>">
  <div class="card-header">
    <h3 class="card-title"><%= collection.title %></h3>
  </div>
  <div class="card-body">
    <% collection.collection_items.with_images.map{ _1.images.first }.first(20).each do |image| %>
      <%= image_tag image.variant(:thumb), class: 'img-thumbnail rounded' %>
    <% end %>
    <p class="card-text"><%= collection.description %></p>
    <%= link_to collection_collection_items_path(collection), class: 'btn btn-primary p' do %>
      View
    <% end %>
  </div>
</div>