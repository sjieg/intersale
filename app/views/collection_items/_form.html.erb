<%= simple_form_for([@collection, @collection_item]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :collection_id, as: :hidden %>
    <%= f.input :images, input_html: { multiple: true, direct_upload: true } %>
    <% @collection_item.images.each do |img| %>
      <%= image_tag(img, class: 'mw-100') %>
    <% end %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%#= f.input :value %>
    <%#= f.input :height_mm %>
    <%#= f.input :width_mm %>
    <%#= f.input :depth_mm %>
    <%#= f.input :availability, collection: CollectionItem.availabilities.keys, include_blank: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
