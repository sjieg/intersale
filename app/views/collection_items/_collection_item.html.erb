<div class="card collection-item-card" id="<%= dom_id(collection_item) %>">
  <% if collection_item.images.length > 1 %>
    <% carousel_id = dom_id(collection_item) + '_carousel' %>
    <div id="<%= carousel_id %>" class="carousel slide">
      <div class="carousel-inner">
        <% collection_item.images.each do |image| %>
          <a class="carousel-item <%= 'active' if image == collection_item.images.first %>" href="<%= url_for(image) %>" target="_blank">
            <%= image_tag url_for(image), class: 'd-block w-100 card-img-top' %>
          </a>
        <% end %>
      </div>
      <buitton class="carousel-control-prev" data-bs-target="#<%= carousel_id %>" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </buitton>
      <button class="carousel-control-next" data-bs-target="#<%= carousel_id %>" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  <% else %>
    <a href="<%= url_for(collection_item.images.first) %>" target="_blank">
      <%= image_tag url_for(collection_item.images.first), class: 'card-img-top', alt: collection_item.title %>
    </a>
  <% end %>
  <div class="card-body">
    <h5 class="card-title text-truncate"><%= collection_item.title %></h5>
    <p class="card-text text-truncate"><%= collection_item.description %></p>
    <%= link_to collection_item, class: 'btn btn-primary' do %>
      View
    <% end %>
  </div>
</div>
