<header class="mb-3 border-bottom">
  <div class="container d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 ">
    <div class="col-md-3 mb-2 mb-md-0">
      <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
        <%= t('app_name') %>
      </a>
    </div>

    <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
      <li class="nav-item">
        <%= link_to t('activerecord.models.collections.other'), collections_path, class: "nav-link #{'link-secondary' if current_page?(collections_path)}" %>
      </li>
    </ul>

    <% if user_signed_in? %>
      <div class="dropdown text-end">
        <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          <img src="<%= current_user.gravatar_url(size: 32) %>" alt="mdo" width="32" height="32" class="rounded-circle">
        </a>
        <ul class="dropdown-menu text-small" style="">
          <li>
            <%= link_to t('header.profile'), edit_user_registration_path, class: 'dropdown-item' %>
          </li>
          <li>
            <hr class="dropdown-divider">
          </li>
          <li>
            <%= link_to t('header.sign_out'), destroy_user_session_path, data: { turbo_method: :delete }, class: 'dropdown-item' %>
          </li>
        </ul>
      </div>
    <% else %>
      <div class="col-md-3 text-end">
        <%= link_to t('header.log_in'), new_user_session_path, class: 'btn btn-outline-primary me-2' %>
        <%= link_to t('header.sign_up'), new_user_registration_path, class: 'btn btn-primary me-2' %>
      </div>
    <% end %>
  </div>
</header>